<%= link_to("<< Currencies", {:action => 'index'}, :class => 'back-link') %>

<div class="currecies delete">
  <h3>Delete Currency</h3>

  <%= form_for(:currency, :url => {:action => 'destroy', :id => @currency.id}) do |f| %>

    <p>Are you sure you want to permanently delete this currency?</p>

    <p class="reference-name"><%= @currency.name %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete Currency") %>
    </div>

  <% end %>
</div>